{
    "name": "hosting",
    "version": "0.0.1",
    "description": "File hosting",
    "private": true,
    "type": "module",
    "scripts": {
        "============== Dev ==============": "",
        "dev": "tsx watch --tsconfig ./tsconfig.node.json --ignore \"src-client\" --ignore \"vite.config.ts.timestamp-*\" src-server/index.ts | pino-pretty",
        "dev:windows": "chcp 65001&&npm run dev",
        "lint-build": "npm run clean:dist&&npm run lint&&npm run build",
        "============== Lint =============": "",
        "lint": "npm-run-all --parallel lint:eslint lint:ts",
        "lint:eslint": "eslint src-server src-client",
        "lint:ts": "tsc -b",
        "============= Build =============": "",
        "build": "npm-run-all --parallel build:front build:server",
        "build:front": "vite build",
        "build:server": "tsup-node",
        "============== Start ============": "",
        "start": "cross-env NODE_ENV=production node dist/server/index.js",
        "start:windows": "chcp 65001&&npm run start",
        "============== Service ==========": "",
        "clean:dist": "rimraf dist"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/MikeAlekseev/Hosting.git"
    },
    "engines": {
        "node": ">=20.0.0"
    },
    "dependencies": {
        "cron": "^4.3.0",
        "cross-env": "^7.0.3",
        "dotenv": "^16.4.7",
        "express": "^4.21.2",
        "image-thumbnail": "^1.0.17",
        "pino": "^9.6.0",
        "pino-http": "^10.3.0",
        "pino-pretty": "^13.0.0",
        "sirv": "^3.0.0",
        "statuses": "^2.0.1",
        "zod": "^3.24.1",
        "zod-validation-error": "^3.4.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.17.0",
        "@tanstack/react-query": "^5.74.4",
        "@types/express": "^4.17.21",
        "@types/image-thumbnail": "^1.0.4",
        "@types/node": "^22.10.5",
        "@types/react": "^18.3.18",
        "@types/react-dom": "^18.3.5",
        "@types/statuses": "^2.0.5",
        "@vitejs/plugin-react": "^4.3.4",
        "clsx": "^2.1.1",
        "escape-string-regexp": "^5.0.0",
        "eslint": "^9.17.0",
        "eslint-import-resolver-typescript": "^3.7.0",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-react": "^7.37.3",
        "eslint-plugin-react-hooks": "^5.1.0",
        "eslint-plugin-react-refresh": "^0.4.16",
        "globals": "^15.14.0",
        "npm-run-all": "^4.1.5",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "react-router": "^7.1.1",
        "react-router-dom": "^7.1.1",
        "rimraf": "^6.0.1",
        "sass": "^1.83.0",
        "tsup": "^8.3.5",
        "tsx": "^4.19.2",
        "typescript": "^5.7.2",
        "typescript-eslint": "^8.18.2",
        "vite": "^6.0.6"
    }
}
